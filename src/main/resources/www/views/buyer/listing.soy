{namespace com.spoutouts.acqnet.buyer}

/**
 */
{template .listing autoescape="strict" kind="html"}
{@param pagename: string} /** the page title */
{call com.spoutouts.acqnet.base data="all"}{param context: 'buyer' /}{param stylesheets kind="html"}{literal}
	<style>
	.propsnapshot {
		display: inline-block;
		box-sizing: border-box;
		width: 50%;
		text-align: left;
		font-size: 14px;

		border: 1px solid #f5f5f5;
		background: #fdfdfd;
	}

	.propsnapshot img {
		display: inline-block;
		box-sizing: border-box;
		width: 25%;
		padding: 2px;
		vertical-align: middle;
	}

	.propsnapshot .summary {
		display: inline-block;
		box-sizing: border-box;
		padding: 5px;
		vertical-align: middle;
	}

	.propsnapshot:hover {
		background: MediumSeaGreen;
		color: white;
		border: 1px solid MediumSeaGreen;
	}

	.propsnapshot:hover img {
		padding: 5px;
	}

	.viewmore {
		font-size: 12px;
		display: block;
		text-align: center;
		padding: 10px;
		background: #f5f5f5;
		border: solid 1px lightgray;
	}

	.viewmore:hover {
		background: #e5e5e5;
	}

	.locked:before {
		font-family: monospace;
		font-size: 12pt;
		color: gray;
		margin: 0 2px;
		content: '';
		width: 12px;
		height: 12px;
		display: inline-block;
		vertical-align: middle;
		background: url('../assets/images/private.png');
		background-size: 12px;
	}

	.unlocked:before {
		font-family: monospace;
		font-size: 12pt;
		color: gray;
		margin: 0 2px;
		content: '';
		width: 12px;
		height: 12px;
		display: inline-block;
		vertical-align: middle;
		background: url('../assets/images/public.png');
		background-size: 12px;
	}

	.categories {
		display: none;
		position: absolute;
		left: 10px;
		right: 10px;
		margin-top: -10px;
	}

	.dimmer {
		position: fixed;
		z-index: 1;
		left: 0;
		right: 0;
		top: 0;
		bottom: 100%;
		background-color: #000;
		background-color: rgba(0, 0, 0, 0.25);
		transition: bottom 0.5s ease;
	}

	.search {
		position: relative;
	}

	.categories, .search {
		z-index: 2;
	}

	.search:focus ~ .categories,
	.search:hover ~ .categories,
	.categories:hover {
		display: block;
	}

	.search:focus ~ .dimmer,
	.search:hover ~ .dimmer,
	.categories:hover ~ .dimmer {
		bottom: 0;
	}
	</style>
{/literal}{/param}{param layout kind="html"}
